  "keyFeatures": [
    "Automated VPS provisioning on Hetzner and DigitalOcean",
    "Interactive TUI with command palette (/new, /deploy, /status, etc.)",
    "Template system for reusable deployment configurations",
    "Checkpoint-based deployment recovery",
    "Automated OpenClaw installation and configuration",
    "Tailscale VPN integration for secure access",
    "SSH key management and secure connections",
    "Real-time log streaming and monitoring",
    "Deployment lifecycle management (create, deploy, monitor, destroy)"
  ],
  "publicApiSurface": [
    "clawcontrol (main CLI entry point)",
    "/new - Initialize new deployment",
    "/deploy - Deploy to cloud",
    "/status - View deployment status",
    "/ssh - SSH into deployment",
    "/logs - Stream deployment logs",
    "/dashboard - View deployment dashboard",
    "/destroy - Delete deployment",
    "/templates - Manage templates",
    "/channels - Manage channels",
    "/help - Show help",
    "--version/-v - Show version",
    "--help/-h - Show help message"
  ]
